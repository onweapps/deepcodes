<div class="centered">
  <div class="centered_content">
    <div class="brain_pic"></div>
    <div class="right_blurb">
      <form id="register" method="post" action="/create">
          <label class="label" for="name">Name</label>
          <input type="text" name="name" style="width: 200px" placeholder="e.g. Koko">
          <br>

          <label class="label" for="email">Email</label>
          <input type="email" name="email" placeholder="e.g. koko@talkingorilla.com">
          <br>

          <label class="label" for="password">Password</label>
          <input type="password" name="password" placeholder="6 or more characters">
          <br>

          <input type="submit" class="button" value="Sign Up">
        </form>
    </div>
  </div>
</div>
